slack=(
	update_freq=180
	script="$PLUGIN_DIR/slack.sh"
	icon.font.size=18
)
sketchybar --add item slack right \
	--set slack "${slack[@]}" \
	--subscribe slack system_woke

##### Force all scripts to run the first time (never do this in a script) #####
sketchybar --update
