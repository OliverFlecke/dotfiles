PLUGIN_DIR="$CONFIG_DIR/plugins"
SPOTIFY_EVENT="com.spotify.client.PlaybackStateChanged"

BAR_COLOR=0x80000000
BORDER_COLOR=0xfff5a97f
LABEL_COLOR=0xffffffff
ICON_COLOR=0xffffffff

##### Bar Appearance #####
# Configuring the general appearance of the bar.
# These are only some of the options available. For all options see:
# https://felixkratz.github.io/SketchyBar/config/bar
# If you are looking for other colors, see the color picker:
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

bar=(
	color=$BAR_COLOR
	height=40
	blur_radius=40
	notch_width=220
)
sketchybar --bar "${bar[@]}"

##### Changing Defaults #####
# We now change some default values, which are applied to all further items.
# For a full list of all available item properties see:
# https://felixkratz.github.io/SketchyBar/config/items


default=(
	padding_left=5
	padding_right=5
	label.font="Hack Nerd Font:Regular:14.0"
	label.color=$LABEL_COLOR
	label.padding_left=4
	label.padding_right=8

	icon.font="Hack Nerd Font:Regular:16.0"
	icon.color=$ICON_COLOR
	icon.padding_left=8
	icon.padding_right=4

	background.height=28
	background.color=0xff363944
	background.border_width=2
	background.corner_radius=8
)
sketchybar --default "${default[@]}"

##### Adding Left Items #####
# We add some regular items to the left side of the bar, where
# only the properties deviating from the current defaults need to be set

# sketchybar --add item chevron left \
# 	       --set chevron icon= label.drawing=off

app=(
	script="$PLUGIN_DIR/front_app.sh"
	icon.drawing=off
	label.padding_left=8
)
sketchybar --add item front_app left \
	--set front_app "${app[@]}" \
	--subscribe front_app front_app_switched

# Left of notch
weather=(
	script="$PLUGIN_DIR/weather.sh"
	icon=
	icon.color=0xfff5bde6
	update_freq=1800
	background.drawing=on
)
sketchybar --add item weather q \
	--set weather "${weather[@]}" \
	--subscribe weather system_woke

##### Right of notch
spotify=(
	script="$PLUGIN_DIR/spotify.sh"
	icon=
	icon.padding_right=8
	label.drawing=off
	label.padding_left=0
)
sketchybar --add event spotify_change $SPOTIFY_EVENT \
	--add item spotify e \
	--set spotify "${spotify[@]}" \
	--subscribe spotify spotify_change mouse.clicked

##### Adding Right Items #####
clock=(
	update_freq=10
	icon=
	script="$PLUGIN_DIR/clock.sh"
)
sketchybar --add item clock right --set clock "${clock[@]}"

volume=(
	script="$PLUGIN_DIR/volume.sh"
)
sketchybar --add item volume right \
	       --set volume "${volume[@]}" \
	       --subscribe volume volume_change

battery=(
	update_freq=120
	script="$PLUGIN_DIR/battery-new.sh"
)
sketchybar --add item battery right \
	--set battery "${battery[@]}" \
	--subscribe battery system_woke power_source_change
# TODO: Only want to write out the current workspace. Need to redraw this.

